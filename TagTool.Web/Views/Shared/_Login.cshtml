<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item d-none d-md-block">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity.Name</a>
        </li>
        
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout">
                <button type="submit" class="btn pinkHollow">Logout</button>
            </form>
        </li>

        <li class="nav-item">
            <a asp-controller="User" asp-action="SettingsVerify" class="nav-link material-icons" style="color: magenta;">
                settings
            </a>
        </li>
    }
    else
    {
        <li class="nav-item ">
            <a class="btn btn-light pinkSolid" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
